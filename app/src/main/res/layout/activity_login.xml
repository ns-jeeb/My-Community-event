<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".authintication.LoginActivity">

        <!-- Login progress -->
        <ProgressBar
            android:id="@+id/login_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progress="25"
            style="@android:style/Widget.ProgressBar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:visibility="visible"
            android:visibility="gone"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHeight_percent=".04"
            android:id="@+id/remember_me"
            android:text="@string/do_save_user_info"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="10dp"
            android:id="@+id/auth_main_layout"
            app:layout_constraintBottom_toTopOf="@+id/auth_btn_layout"
            app:layout_constraintHeight_percent=".75">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/auth_btn_layout"
            app:layout_constraintHeight_percent=".15"
            app:layout_constraintBottom_toBottomOf="parent">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fab_margin"
                app:srcCompat="@drawable/ic_lock"
                app:maxImageSize="35dp"
                app:fabSize="normal"
                app:backgroundTint="@color/colorPrimary"
                tools:ignore="VectorDrawableCompat"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_create_account"
                tools:ignore="VectorDrawableCompat"
                app:srcCompat="@drawable/ic_create_account"
                app:maxImageSize="35dp"
                android:layout_margin="@dimen/fab_margin"
                app:backgroundTint="@color/colorPrimary"
                app:fabSize="normal"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/btn_join_community"
                android:layout_height="wrap_content"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_below="@+id/fab_lock"
                android:clickable="true"
                android:gravity="right"
                android:textSize="18sp"
                android:text="@string/registration_user"
                android:textStyle="bold"
                android:focusable="true"/>

        </RelativeLayout>

    </android.support.constraint.ConstraintLayout>
</layout>